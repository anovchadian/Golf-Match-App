{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src/**/*", "index.html"]
}